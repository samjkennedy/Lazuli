struct Rect {
    width: Real
    height: Real
}

struct Circle {
    radius: Real
}

fn area(rect: Rect): Real { return rect.width * rect.height }

fn area(circle: Circle): Real {  return 3.14159 * circle.radius * circle.radius }

fn name(rect: Rect): String { return "Rect" }

fn name(rect: Circle): String { return "Circle" }

fn <T> measure(s: T) {
    print("The ")
    print(s.name())
    print("'s area is: ")
    print(s.area())
}

fn <T> compareAreas(s1: T, s2: T) {
    diff := s2.area() - s1.area()
    print("The ")
    if (diff > 0.) {
        print(s2.name())
    } else {
        print(s1.name())
    }
    print("'s area is bigger")
}

fn main() {
    r := Rect{2.0, 8.0}
    c := Circle{2.0}

    r.measure()
    c.measure()

    compareAreas(r, c)
}