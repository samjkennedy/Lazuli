fn multiReturn(a: Int): Tuple {
    match a {
        1    -> return ("Hello", true),
        else -> return ("World", false, 1)
    }
}

fn main() {
    t: Tuple = ("Hello", 1, true)

    print(len(t))

    s: String = t[0] as String
    print(s)

    for (v: Any in t) {
        print(v)
    }

    print(t[0])
    for (i: Int = 0 to len(t)) {
        print(t[i])
    }

    t = multiReturn(1)
    print(len(t))

    //Tuples of only one element require a trailing comma:
    singleton: Tuple = (10,)
    print(len(singleton))
    for (v: Any in singleton) {
        print(v)
    }
}